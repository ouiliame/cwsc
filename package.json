{
  "name": "cwsc",
  "version": "1.0.0",
  "description": "CWScript Compiler",
  "main": "dist/index.js",
  "type": "commonjs",
  "types": "dist/index.d.ts",
  "author": "William Chen",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  },
  "scripts": {
    "antlr-lexer": "antlr4ts ./grammar/CWScriptLexer.g4 -o ./src",
    "antlr-parser": "antlr4ts -visitor ./grammar/CWScriptParser.g4 -o ./src -lib ./src/grammar",
    "antlr": "bun run antlr-lexer && bun run antlr-parser",
    "format": "prettier --check ./src/**/*.ts",
    "format:fix": "prettier --write ./src/**/*.ts",
    "build": "tsc --module commonjs",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/**/*.ts",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublishOnly": "yarn run build",
    "test": "jest"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
